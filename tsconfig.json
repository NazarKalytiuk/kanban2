{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@core": ["./src/app/core/index"],
      "@core/model": ["./src/app/core/model/index"],
      "@core/services": ["./src/app/core/services/index"],
      "@shared": ["./src/app/shared/index"],
      "@todo": ["./src/app/todo/index"],
      "@todo/*": ["./src/app/todo/*"],
    },
    "lib": [
      "es2018",
      "dom"
    ]
  }
}
